{
  "pluginAlias": "SqueezeboxHomebridgePlugin",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "schema": {
    "type": "array",
    "title": "Accessories",
    "description": "List of accessories to be created.",
    "items": {
      "type": "object",
      "required": ["name", "host"],
      "properties": {
        "name": {
          "title": "Name",
          "type": "string",
          "required": true,
          "default": "Home LMS"
        },
        "host": {
          "title": "Host",
          "type": "string",
          "required": true,
          "default": "192.168.1.1"
        },
        "telenetPort": {
          "title": "Telenet port for notifications",
          "type": "integer",
          "required": true,
          "default": 9090
        },
        "httpPort": {
          "title": "HTTP port for JSON RPC requests",
          "type": "integer",
          "required": true,
          "default": 9000
        }
      }
    }
  }
}
